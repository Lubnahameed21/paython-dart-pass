//Q2
void main(){
   
   var CAT = Cat();
   CAT.printName();
   CAT.printSound();
   var DOG = Dog();
   DOG.printName();
   DOG.printSound();
   var COW =  Cow();
   COW.printName();
   COW.printSound();
     
}

abstract class Animal {
  void printName();
  void printSound();
}


class Cat extends Animal {

  String name = "CAT";
  void printName() {
    print("Name : ${name}");
  }


  String sound = "meowmeow ";
  void printSound() {
    print("Sound :${sound}");
  }
}



class Dog extends Animal {

  String name = "DOG";
  void printName() {
    print("Name : ${name}");
  }


  String sound = "ho ho ho ho ";
  void printSound() {
    print("Sound :${sound}");
  }
}



class Cow extends Animal {

  String name = "COW";
  void printName() {
    print("Name: ${name}");
  }

 
  String sound = "moo moo moo";
  void printSound() {
    print("Sound :${sound}");
  }
}
